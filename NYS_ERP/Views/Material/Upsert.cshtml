@model MaterialVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row align-items-center">
            <div class="col-1">
                <a asp-action="Index" class="btn btn-outline-light btn-lg rounded-circle shadow-sm back-button">
                    <i class="bi bi-arrow-left"></i>
                </a>
            </div>
            <div class="col-10 text-center">
                <h2 class="text-white py-2">@(Model.Material.MATDOCTYPE == null ? "Create" : "Update") Material</h2>
            </div>
            <div class="col-1"></div>
        </div>
    </div>

    <div class="card-body p-4">
        <form asp-action="Upsert" method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Material.RowVersion" type="hidden" />
                
            <div class="row mb-3">
                <!-- Primary Key Section -->
                <div class="col-12 mb-4">
                    <div class="card border-primary">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Primary Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <select asp-for="Material.COMCODE"
                                                asp-items="Model.CompanyList"
                                                class="form-select border-0 shadow @(Model.Material.MATDOCTYPE != null ? "bg-white" : "")"
                                                style="@(Model.Material.MATDOCTYPE != null ? "opacity: 1; -webkit-appearance: none;" : "")"
                                                disabled="@(Model.Material.MATDOCTYPE != null)">
                                            <option disabled selected>-- Select Company --</option>
                                        </select>
                                        @if (Model.Material.MATDOCTYPE != null)
                                        {
                                            <input type="hidden" asp-for="Material.COMCODE" />
                                        }
                                        <label asp-for="Material.COMCODE" class="ms-2"></label>
                                        <span asp-validation-for="Material.COMCODE" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <select asp-for="Material.MATDOCTYPE" asp-items="Model.MaterialTypeList"
                                                class="form-select border-0 shadow @(Model.Material.MATDOCTYPE != null ? "bg-white" : "")"
                                                style="@(Model.Material.MATDOCTYPE != null ? "opacity: 1; -webkit-appearance: none;" : "")"
                                                disabled="@(Model.Material.MATDOCTYPE != null)">
                                            <option disabled selected>-- Select Material Type --</option>
                                        </select>
                                        @if (Model.Material.MATDOCTYPE != null)
                                        {
                                            <input type="hidden" asp-for="Material.MATDOCTYPE" />
                                        }
                                        <label asp-for="Material.MATDOCTYPE" class="ms-2"></label>
                                        <span asp-validation-for="Material.MATDOCTYPE" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Material.MATDOCNUM"
                                               class="form-control border-0 shadow bg-white"
                                               style="@(Model.Material.MATDOCTYPE != null ? "opacity: 1;" : "")"
                                               readonly="@(Model.Material.MATDOCTYPE != null)" />
                                        <label asp-for="Material.MATDOCNUM" class="ms-2"></label>
                                        <span asp-validation-for="Material.MATDOCNUM" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <select asp-for="Material.LANCODE" asp-items="Model.LanguageList"
                                                class="form-select border-0 shadow @(Model.Material.MATDOCTYPE != null ? "bg-white" : "")"
                                                style="@(Model.Material.MATDOCTYPE != null ? "opacity: 1; -webkit-appearance: none;" : "")"
                                                disabled="@(Model.Material.MATDOCTYPE != null)">
                                            <option disabled selected>-- Select Language --</option>
                                        </select>
                                        @if (Model.Material.MATDOCTYPE != null)
                                        {
                                            <input type="hidden" asp-for="Material.LANCODE" />
                                        }
                                        <label asp-for="Material.LANCODE" class="ms-2"></label>
                                        <span asp-validation-for="Material.LANCODE" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Date Range Section -->
                <div class="col-12 mb-4">
                    <div class="card border-info">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">Date Range</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Material.MATDOCFROM" type="date"
                                               class="form-control border-0 shadow bg-white"
                                               style="@(Model.Material.MATDOCTYPE != null ? "opacity: 1;" : "")"
                                               readonly="@(Model.Material.MATDOCTYPE != null)" />
                                        <label asp-for="Material.MATDOCFROM" class="ms-2"></label>
                                        <span asp-validation-for="Material.MATDOCFROM" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Material.MATDOCUNTIL" type="date"
                                               class="form-control border-0 shadow bg-white"
                                               style="@(Model.Material.MATDOCTYPE != null ? "opacity: 1;" : "")"
                                               readonly="@(Model.Material.MATDOCTYPE != null)" />
                                        <label asp-for="Material.MATDOCUNTIL" class="ms-2"></label>
                                        <span asp-validation-for="Material.MATDOCUNTIL" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Information Section -->
                <div class="col-12 mb-4">
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Additional Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Material.NETWEIGHT" class="form-control border-0 shadow" />
                                        <label asp-for="Material.NETWEIGHT" class="ms-2">Net Weight</label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Material.NWUNIT" class="form-control border-0 shadow" />
                                        <label asp-for="Material.NWUNIT" class="ms-2">Unit</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Material.BRUTWEIGHT" class="form-control border-0 shadow" />
                                        <label asp-for="Material.BRUTWEIGHT" class="ms-2">Brut Weight</label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Material.BWUNIT" class="form-control border-0 shadow" />
                                        <label asp-for="Material.BWUNIT" class="ms-2">Unit</label>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Material.STUNIT" class="form-control border-0 shadow" />
                                        <label asp-for="Material.STUNIT" class="ms-2">Stock Unit</label>
                                        <span asp-validation-for="Material.STUNIT" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <h7>Supply Type</h7>
                                    <div class="form-check">
                                        <input asp-for="Material.SUPPLYTYPE" class="form-check-input" type="radio" value="0" id="supplyTypePurchased" />
                                        <label for="supplyTypePurchased" class="form-check-label">Purchased</label>
                                    </div>
                                    <div class="form-check">
                                        <input asp-for="Material.SUPPLYTYPE" class="form-check-input" type="radio" value="1" id="supplyTypeProduced" />
                                        <label for="supplyTypeProduced" class="form-check-label">Produced</label>
                                    </div>
                                    <span asp-validation-for="Material.SUPPLYTYPE" class="text-danger"></span>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="Material.ISPASSIVE" class="form-check-input" />
                                        <label asp-for="Material.ISPASSIVE" class="form-check-label">Is Passive</label>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="Material.ISDELETED" class="form-check-input" />
                                        <label asp-for="Material.ISDELETED" class="form-check-label">Is Deleted</label>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-check form-switch">
                                        <input asp-for="Material.ISBOM" class="form-check-input" id="isBomSwitch" />
                                        <label asp-for="Material.ISBOM" class="form-check-label">Has BOM</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating mb-3 bom-fields" style="display: none;">
                                        <select asp-for="Material.BOMDOCTYPE" asp-items="Model.BOMList" class="form-control border-0 shadow">
                                            <option disabled selected>-- Select BOM Type --</option>
                                        </select>
                                        <label asp-for="Material.BOMDOCTYPE" class="ms-2"></label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating mb-3 bom-fields" style="display: none;">
                                        <input asp-for="Material.BOMDOCNUM" class="form-control" />
                                        <label asp-for="Material.BOMDOCNUM">BOM Number</label>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-check form-switch">
                                        <input asp-for="Material.ISROUTE" class="form-check-input" id="isRouteSwitch" />
                                        <label asp-for="Material.ISROUTE" class="form-check-label">Has Route</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating mb-3 route-fields" style="display: none;">
                                        <select asp-for="Material.ROTDOCTYPE" asp-items="Model.RotaList" class="form-control border-0 shadow">
                                            <option disabled selected>--Select Route Type--</option>
                                        </select>
                                        <label asp-for="Material.ROTDOCTYPE" class="ms-2"></label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating mb-3 route-fields" style="display: none;">
                                        <input asp-for="Material.ROTDOCNUM" class="form-control" />
                                        <label asp-for="Material.ROTDOCNUM">Route Number</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Description Section -->
                <div class="col-12 mb-4">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-white">
                            <h5 class="mb-0">Description</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <textarea asp-for="Material.MATSTEXT" class="form-control border-0 shadow" style="height: 150px;"></textarea>
                                        <label asp-for="Material.MATSTEXT" class="ms-2">Short Description</label>
                                        <span asp-validation-for="Material.MATSTEXT" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <textarea asp-for="Material.MATLTEXT" class="form-control border-0 shadow" style="height: 150px;"></textarea>
                                        <label asp-for="Material.MATLTEXT" class="ms-2">Long Description</label>
                                        <span asp-validation-for="Material.MATLTEXT" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="col-12">
                    <div class="row">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">
                                @(Model.Material.MATDOCTYPE == null ? "Create" : "Update")
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Material" asp-action="Index" class="btn btn-secondary border form-control">
                                Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('#isBomSwitch').change(function () {
                $('.bom-fields').toggle(this.checked);
            });

            $('#isRouteSwitch').change(function () {
                $('.route-fields').toggle(this.checked);
            });

            $('.bom-fields').toggle($('#isBomSwitch').is(':checked'));
            $('.route-fields').toggle($('#isRouteSwitch').is(':checked'));
        });
    </script>
}