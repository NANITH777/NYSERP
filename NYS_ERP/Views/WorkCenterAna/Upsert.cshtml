@model WorkCenterAnaVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row align-items-center">
            <div class="col-1">
                <a asp-controller="WorkCenterAna" asp-action="Index" class="btn btn-outline-light btn-lg rounded-circle shadow-sm">
                    <i class="bi bi-arrow-left"></i>
                </a>
            </div>
            <div class="col-10 text-center">
                <h2 class="text-white py-2">@(Model.WorkCenterAna.WCMDOCTYPE == null ? "Create" : "Update") Work Center Analysis</h2>
            </div>
            <div class="col-1"></div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Upsert" method="post" class="row" enctype="multipart/form-data">
            <div class="row">
                <!-- Primary Key Section -->
                <div class="col-12 mb-4">
                    <div class="card border-primary">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Primary Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <select asp-for="WorkCenterAna.COMCODE"
                                                asp-items="Model.CompanyList"
                                                class="form-select border-0 shadow @(Model.WorkCenterAna.WCMDOCTYPE != null ? "bg-white" : "")"
                                                style="@(Model.WorkCenterAna.WCMDOCTYPE != null ? "opacity: 1; -webkit-appearance: none;" : "")"
                                                disabled="@(Model.WorkCenterAna.WCMDOCTYPE != null)">
                                            <option disabled selected>-- Select Company --</option>
                                        </select>
                                        @if (Model.WorkCenterAna.WCMDOCTYPE != null)
                                        {
                                            <input type="hidden" asp-for="WorkCenterAna.COMCODE" />
                                        }
                                        <label asp-for="WorkCenterAna.COMCODE" class="ms-2"></label>
                                        <span asp-validation-for="WorkCenterAna.COMCODE" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <select asp-for="WorkCenterAna.WCMDOCTYPE" asp-items="Model.WorkCenterList"
                                                class="form-select border-0 shadow @(Model.WorkCenterAna.WCMDOCTYPE != null ? "bg-white" : "")"
                                                style="@(Model.WorkCenterAna.WCMDOCTYPE != null ? "opacity: 1; -webkit-appearance: none;" : "")"
                                                disabled="@(Model.WorkCenterAna.WCMDOCTYPE != null)">
                                            <option disabled selected>-- Select Work Center Type --</option>
                                        </select>
                                        @if (Model.WorkCenterAna.WCMDOCTYPE != null)
                                        {
                                            <input type="hidden" asp-for="WorkCenterAna.WCMDOCTYPE" />
                                        }
                                        <label asp-for="WorkCenterAna.WCMDOCTYPE" class="ms-2"></label>
                                        <span asp-validation-for="WorkCenterAna.WCMDOCTYPE" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="WorkCenterAna.WCMDOCNUM"
                                               class="form-control border-0 shadow bg-white"
                                               style="@(Model.WorkCenterAna.WCMDOCTYPE != null ? "opacity: 1;" : "")"
                                               readonly="@(Model.WorkCenterAna.WCMDOCTYPE != null)" />
                                        <label asp-for="WorkCenterAna.WCMDOCNUM" class="ms-2"></label>
                                        <span asp-validation-for="WorkCenterAna.WCMDOCNUM" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <select asp-for="WorkCenterAna.LANCODE" asp-items="Model.LanguageList"
                                                class="form-select border-0 shadow @(Model.WorkCenterAna.WCMDOCTYPE != null ? "bg-white" : "")"
                                                style="@(Model.WorkCenterAna.WCMDOCTYPE != null ? "opacity: 1; -webkit-appearance: none;" : "")"
                                                disabled="@(Model.WorkCenterAna.WCMDOCTYPE != null)">
                                            <option disabled selected>-- Select Language --</option>
                                        </select>
                                        @if (Model.WorkCenterAna.WCMDOCTYPE != null)
                                        {
                                            <input type="hidden" asp-for="WorkCenterAna.LANCODE" />
                                        }
                                        <label asp-for="WorkCenterAna.LANCODE" class="ms-2"></label>
                                        <span asp-validation-for="WorkCenterAna.LANCODE" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <select asp-for="WorkCenterAna.OPRDOCTYPE" asp-items="Model.OperationList"
                                                class="form-select border-0 shadow @(Model.WorkCenterAna.WCMDOCTYPE != null ? "bg-white" : "")"
                                                style="@(Model.WorkCenterAna.WCMDOCTYPE != null ? "opacity: 1; -webkit-appearance: none;" : "")"
                                                disabled="@(Model.WorkCenterAna.WCMDOCTYPE != null)">
                                            <option disabled selected>-- Select Operation Type --</option>
                                        </select>
                                        @if (Model.WorkCenterAna.WCMDOCTYPE != null)
                                        {
                                            <input type="hidden" asp-for="WorkCenterAna.OPRDOCTYPE" />
                                        }
                                        <label asp-for="WorkCenterAna.OPRDOCTYPE" class="ms-2"></label>
                                        <span asp-validation-for="WorkCenterAna.OPRDOCTYPE" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Date Range Section -->
                <div class="col-12 mb-4">
                    <div class="card border-info">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">Date Range</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="WorkCenterAna.WCMDOCFROM" type="date"
                                               class="form-control border-0 shadow bg-white"
                                               style="@(Model.WorkCenterAna.WCMDOCTYPE != null ? "opacity: 1;" : "")"
                                               readonly="@(Model.WorkCenterAna.WCMDOCTYPE != null)" />
                                        <label asp-for="WorkCenterAna.WCMDOCFROM" class="ms-2"></label>
                                        <span asp-validation-for="WorkCenterAna.WCMDOCFROM" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="WorkCenterAna.WCMDOCUNTIL" type="date"
                                               class="form-control border-0 shadow bg-white"
                                               style="@(Model.WorkCenterAna.WCMDOCTYPE != null ? "opacity: 1;" : "")"
                                               readonly="@(Model.WorkCenterAna.WCMDOCTYPE != null)" />
                                        <label asp-for="WorkCenterAna.WCMDOCUNTIL" class="ms-2"></label>
                                        <span asp-validation-for="WorkCenterAna.WCMDOCUNTIL" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Information Section -->
                <div class="col-12 mb-4">
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Additional Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="WorkCenterAna.MAINWCMDOCTYPE" class="form-control border-0 shadow" />
                                        <label asp-for="WorkCenterAna.MAINWCMDOCTYPE" class="ms-2"></label>
                                        <span asp-validation-for="WorkCenterAna.MAINWCMDOCTYPE" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="WorkCenterAna.MAINWCMDOCNUM" class="form-control border-0 shadow" />
                                        <label asp-for="WorkCenterAna.MAINWCMDOCNUM" class="ms-2"></label>
                                        <span asp-validation-for="WorkCenterAna.MAINWCMDOCNUM" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <select asp-for="WorkCenterAna.CCMDOCTYPE" asp-items="Model.CostCenterList" class="form-control border-0 shadow">
                                            <option disabled selected>-- Select Operation Type --</option>
                                        </select>
                                        <label asp-for="WorkCenterAna.CCMDOCTYPE" class="ms-2"></label>
                                        <span asp-validation-for="WorkCenterAna.CCMDOCTYPE" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="WorkCenterAna.CCMDOCNUM" class="form-control border-0 shadow" />
                                        <label asp-for="WorkCenterAna.CCMDOCNUM" class="ms-2"></label>
                                        <span asp-validation-for="WorkCenterAna.CCMDOCNUM" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="WorkCenterAna.WORKTIME" class="form-control border-0 shadow" />
                                        <label asp-for="WorkCenterAna.WORKTIME" class="ms-2"></label>
                                        <span asp-validation-for="WorkCenterAna.WORKTIME" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Description Section -->
                <div class="col-12 mb-4">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-white">
                            <h5 class="mb-0">Description</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <textarea asp-for="WorkCenterAna.WCMSTEXT" class="form-control border-0 shadow" style="height: 150px;"></textarea>
                                        <label asp-for="WorkCenterAna.WCMSTEXT" class="ms-2">Short Description</label>
                                        <span asp-validation-for="WorkCenterAna.WCMSTEXT" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <textarea asp-for="WorkCenterAna.WCMLTEXT" class="form-control border-0 shadow" style="height: 150px;"></textarea>
                                        <label asp-for="WorkCenterAna.WCMLTEXT" class="ms-2">Long Description</label>
                                        <span asp-validation-for="WorkCenterAna.WCMLTEXT" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Status Section -->
                <div class="col-12 mb-4">
                    <div class="card border-secondary">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0">Status</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check form-switch">
                                        <input asp-for="WorkCenterAna.ISDELETED" class="form-check-input" type="checkbox" />
                                        <label class="form-check-label" asp-for="WorkCenterAna.ISDELETED">Is Deleted</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check form-switch">
                                        <input asp-for="WorkCenterAna.ISPASSIVE" class="form-check-input" type="checkbox" />
                                        <label class="form-check-label" asp-for="WorkCenterAna.ISPASSIVE">Is Passive</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="hidden" asp-for="WorkCenterAna.RowVersion" />

                <!-- Action Buttons -->
                <div class="col-12">
                    <div class="row">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">
                                @(Model.WorkCenterAna.WCMDOCNUM == null ? "Create" : "Update")
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="WorkCenterAna" asp-action="Index" class="btn btn-secondary border form-control">
                                Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function() {
            $('#WorkCenterAna_WCMDOCFROM, #WorkCenterAna_WCMDOCUNTIL').change(function() {
                var fromDate = new Date($('#WorkCenterAna_WCMDOCFROM').val());
                var untilDate = new Date($('#WorkCenterAna_WCMDOCUNTIL').val());

                if (fromDate > untilDate) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Invalid Date',
                        text: 'The start date must be before or equal to the end date.',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        $(this).val('');
                    });
                }
            });
        });
    </script>
}
