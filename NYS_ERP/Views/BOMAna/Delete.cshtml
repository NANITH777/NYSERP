@model BOMAna

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Work Center Analysis</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input type="hidden" asp-for="COMCODE" />
            <input type="hidden" asp-for="BOMDOCTYPE" />
            <input type="hidden" asp-for="BOMDOCNUM" />
            <input type="hidden" asp-for="BOMDOCFROM" />
            <input type="hidden" asp-for="BOMDOCUNTIL" />
            <input type="hidden" asp-for="MATDOCTYPE" />
            <input type="hidden" asp-for="MATDOCNUM" />
            <input type="hidden" asp-for="CONTENTNUM" />


            <div class="p-3">
                <div class="d-flex justify-content-between pt-4">
                    <h5>Are you sure you want to delete this record?</h5>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2">Company Code:</label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.COMCODE</p>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2">Document Type:</label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.BOMDOCTYPE</p>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2">Document Number:</label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.BOMDOCNUM</p>
                    </div>
                </div>

                <div class="row pt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>