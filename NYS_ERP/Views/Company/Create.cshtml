@model Company

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row align-items-center">
            <div class="col-1">
                <a href="/Company/index" class="btn btn-outline-light btn-lg rounded-circle shadow-sm back-button">
                    <i class="bi bi-arrow-left"></i>
                </a>
            </div>
            <div class="col-10 text-center">
                <h2 class="text-white py-2">Create Company</h2>
            </div>
            <div class="col-1"></div>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <form method="post" class="row">
        <div class="border p-3">
            <div class="form-floating py-2 col-12">
                <input asp-for="COMCODE" class="form-control border-0 shadow" />
                <label asp-for="COMCODE" class="ms-2"></label>
                <span asp-validation-for="COMCODE" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="COMTEXT" class="form-control border-0 shadow" />
                <label asp-for="COMTEXT" class="ms-2"></label>
                <span asp-validation-for="COMTEXT" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ADDRESS1" class="form-control border-0 shadow" />
                <label asp-for="ADDRESS1" class="ms-2"></label>
                <span asp-validation-for="ADDRESS1" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ADDRESS2" class="form-control border-0 shadow" />
                <label asp-for="ADDRESS2" class="ms-2"></label>
                <span asp-validation-for="ADDRESS2" class="text-danger"></span>
            </div>

            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Company" asp-action="Index" class="btn btn-secondary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
