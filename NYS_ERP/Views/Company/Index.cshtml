@model List<Company>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row align-items-center">
            <div class="col-1">
                <a href="/" class="btn btn-outline-light btn-lg rounded-circle shadow-sm back-button">
                    <i class="bi bi-arrow-left"></i>
                </a>
            </div>
            <div class="col-10 text-center">
                <h2 class="text-white py-2">Company List</h2>
            </div>
            <div class="col-1"></div>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <div class="row pb-3">
        <div class="col-6">
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Company
            </a>
        </div>
    </div>

    <table id="tblData" class="table table-bordered table-striped">
        <thead class="text-center">
            <tr>
                <th>Company Code</th>
                <th>Company Name</th>
                <th>Adress 1</th>
                <th>Address 2</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Model)
            {
                <tr>
                    <td>@company.COMCODE</td>
                    <td>@company.COMTEXT</td>
                    <td>@company.ADDRESS1</td>
                    <td>@company.ADDRESS2</td>
                    <td class="text-center">
                        <a asp-controller="Company" asp-action="Edit" asp-route-id="@company.COMCODE" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Company" asp-action="Delete" asp-route-id="@company.COMCODE" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    
    <script src="~/js/companies.js">
        
    </script>
}
