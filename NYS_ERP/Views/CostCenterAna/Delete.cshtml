@model CostCenterAna

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Cost Center Analysis</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input type="hidden" asp-for="COMCODE" />
            <input type="hidden" asp-for="CCMDOCTYPE" />
            <input type="hidden" asp-for="CCMDOCNUM" />
            <input type="hidden" asp-for="CCMDOCFROM" />
            <input type="hidden" asp-for="CCMDOCUNTIL" />
            <input type="hidden" asp-for="LANCODE" />

            <div class="p-3">
                <div class="d-flex justify-content-between pt-4">
                    <h5>Are you sure you want to delete this record?</h5>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2">Company Code:</label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.COMCODE</p>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2">Document Type:</label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.CCMDOCTYPE</p>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2">Document Number:</label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.CCMDOCNUM</p>
                    </div>
                </div>

                <div class="row pt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>