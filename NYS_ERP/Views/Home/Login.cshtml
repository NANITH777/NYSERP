@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ERP System Login</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #4a90e2, #7ed6df);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            padding: 40px;
            width: 400px;
            backdrop-filter: blur(10px);
        }

        .logo-container {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo {
            width: 80px;
            height: 80px;
            background: #4a90e2;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .welcome-icons {
            margin: 15px 0;
            font-size: 24px;
            color: #4a90e2;
        }

            .welcome-icons i {
                margin: 0 10px;
                transition: transform 0.3s ease;
            }

                .welcome-icons i:hover {
                    transform: scale(1.2);
                }

        h1 {
            color: #2c3e50;
            font-size: 24px;
            margin-bottom: 30px;
            text-align: center;
        }

        .input-group {
            margin-bottom: 25px;
            position: relative;
        }

            .input-group i {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: #4a90e2;
            }

        input {
            width: 100%;
            padding: 15px 15px 15px 45px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s ease;
            outline: none;
        }

            input:focus {
                border-color: #4a90e2;
                box-shadow: 0 0 10px rgba(74, 144, 226, 0.1);
            }

        button {
            width: 100%;
            padding: 15px;
            background: #4a90e2;
            border: none;
            border-radius: 10px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            button:hover {
                background: #357abd;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(74, 144, 226, 0.3);
            }

        .alert {
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 8px;
            text-align: center;
        }

        .alert-danger {
            background-color: #ffe5e5;
            color: #ff6b6b;
            border: 1px solid #ffcccc;
        }

        .features {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .feature-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            color: #6c757d;
            font-size: 12px;
        }

            .feature-item i {
                font-size: 20px;
                margin-bottom: 5px;
                color: #4a90e2;
            }

        .footer {
            text-align: center;
            margin-top: 25px;
            color: #6c757d;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo-container">
            <div class="logo">ERP</div>
            <div class="welcome-icons">
                <i class="fas fa-chart-line"></i>
                <i class="fas fa-cogs"></i>
                <i class="fas fa-users"></i>
            </div>
            <h1>Welcome to ERP System</h1>
        </div>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    @TempData["Error"]
                </div>
            }
            <div class="input-group">
                <i class="fas fa-user"></i>
                <input type="text" name="username" placeholder="Username" required>
            </div>
            <div class="input-group">
                <i class="fas fa-lock"></i>
                <input type="password" name="password" placeholder="Password" required>
            </div>
            <button type="submit">
                <i class="fas fa-sign-in-alt"></i>
                Sign In
            </button>
        }
        <div class="features">
            <div class="feature-item">
                <i class="fas fa-shield-alt"></i>
                <span>Secure Access</span>
            </div>
            <div class="feature-item">
                <i class="fas fa-sync"></i>
                <span>Real-time Data</span>
            </div>
            <div class="feature-item">
                <i class="fas fa-mobile-alt"></i>
                <span>Mobile Ready</span>
            </div>
        </div>
        <div class="footer">
            © @DateTime.Now.Year ERP System. All rights reserved.
        </div>
    </div>
</body>
</html>