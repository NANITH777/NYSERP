@{
    ViewData["Title"] = "Ana Ekran";
}

<div class="modern-dashboard">
    <div class="sidebar">
        <div class="logo">
            <span>Main </span>Menu
        </div>
        <nav class="navigation">
            <div class="nav-section">
                @* <h3>Main Menu</h3> *@
                <a href="/" class="nav-item active">
                    <i class="bi bi-house-door"></i>
                    <span>Dashboard</span>
                </a>
            </div>
        </nav>
        @* <div class="sidebar-footer">
            <button class="close-app-btn" onclick="window.close()">
                <i class="bi bi-power"></i>
                <span>Close App</span>
            </button>
        </div> *@
    </div>

    <main class="content-area">
        <header class="page-header">
            <h1>Ana Ekran</h1>
            <div class="header-actions">
                <button class="btn-notification">
                    <i class="bi bi-bell"></i>
                    <span class="badge">3</span>
                </button>
                <div class="user-profile">
                    <img src="img/user.png" alt="User" class="user-avatar">
                    <span>Admin User</span>
                </div>
            </div>
        </header>

        <div class="dashboard-grid">
            <div class="dashboard-section">
                <div class="section-header">
                    <h2>Kontrol Tabloları</h2>
                    <p>Manage your core system configurations</p>
                </div>
                <div class="card-grid">
                    @{
                        var kontrolTabloItems = new[]
                        {
                    new { icon = "bi-building", href = "/Company", label = "Firma" },
                    new { icon = "bi-diagram-3", href = "/Unit", label = "Birim" },
                    new { icon = "bi-translate", href = "/Language", label = "Dil" },
                    new { icon = "bi-box-seam", href = "/MaterialType", label = "Malzeme Tipi" },
                    new { icon = "bi-globe", href = "/Country", label = "Ülke" },
                    new { icon = "bi-cash-stack", href = "/CostCenter", label = "Maliyet Merkezi" },
                    new { icon = "bi-building-fill", href = "/City", label = "Şehir" },
                    new { icon = "bi-tree", href = "/BOM", label = "Ürün Ağacı" },
                    new { icon = "bi-router", href = "/Rota", label = "Rota Tipi" },
                    new { icon = "bi-gear", href = "/WorkCenter", label = "İş Merkezi Tipi" },
                    new { icon = "bi-list-task", href = "/Operation", label = "Operasyon Tipi" }
                    };
                    }
                    @foreach (var item in kontrolTabloItems)
                    {
                        <a asp-controller="@item.href.TrimStart('/')" asp-action="Index" class="dashboard-card">
                            <div class="card-icon">
                                <i class="bi @item.icon"></i>
                            </div>
                            <div class="card-content">
                                <h3>@item.label</h3>
                                <p>Manage @item.label configurations</p>
                            </div>
                            <div class="card-arrow">
                                <i class="bi bi-arrow-right"></i>
                            </div>
                        </a>
                    }
                </div>
            </div>

            <div class="dashboard-section">
                <div class="section-header">
                    <h2>Ana Tablolar</h2>
                    <p>Access your primary data tables</p>
                </div>
                <div class="card-grid">
                    @{
                        var anaTabloItems = new[]
                        {
                    new { icon = "bi-box-seam", href = "/MaterialType2", label = "Malzeme Bilgileri" },
                    new { icon = "bi-cash-stack", href = "/CostCenter2", label = "Maliyet Merkezi" },
                    new { icon = "bi-gear", href = "/WorkCenter2", label = "İş Merkezi" },
                    new { icon = "bi-tree", href = "/BOM2", label = "Ürün Ağacı" },
                    new { icon = "bi-router", href = "/Rota2", label = "Rota Yönetimi" }
                    };
                    }
                    @foreach (var item in anaTabloItems)
                    {
                        <a asp-controller="@item.href.TrimStart('/')" asp-action="Index" class="dashboard-card">
                            <div class="card-icon">
                                <i class="bi @item.icon"></i>
                            </div>
                            <div class="card-content">
                                <h3>@item.label</h3>
                                <p>Manage @item.label data</p>
                            </div>
                            <div class="card-arrow">
                                <i class="bi bi-arrow-right"></i>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </main>
</div>

@section Styles {
    <style>
        :root {
            --primary-color: #4a90e2;
            --secondary-color: #7ed6df;
            --background-light: #f4f6f9;
            --text-dark: #2c3e50;
            --card-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--background-light);
            color: var(--text-dark);
            line-height: 1.6;
        }

        .modern-dashboard {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-color: #ffffff;
            border-right: 1px solid #e9ecef;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }


        .navigation {
            flex-grow: 1;
        }

        .nav-section h3 {
            text-transform: uppercase;
            font-size: 12px;
            color: #6c757d;
            margin-bottom: 10px;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            color: var(--text-dark);
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .nav-item i {
            margin-right: 10px;
            font-size: 18px;
        }

        .nav-item.active {
            background-color: var(--primary-color);
            color: white;
        }

        .sidebar-footer {
            padding-top: 20px;
            border-top: 1px solid #e9ecef;
        }

        .close-app-btn {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #ff6b6b;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .close-app-btn i {
            margin-right: 10px;
        }

        .content-area {
            flex-grow: 1;
            padding: 20px;
            background-color: var(--background-light);
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .header-actions {
            display: flex;
            align-items: center;
        }

        .btn-notification {
            position: relative;
            background: none;
            border: none;
            margin-right: 20px;
            font-size: 20px;
            color: var(--text-dark);
        }

        .btn-notification .badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: #ff6b6b;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 10px;
        }

        .user-profile {
            display: flex;
            align-items: center;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .dashboard-section {
            background-color: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: var(--card-shadow);
        }

        .section-header {
            margin-bottom: 20px;
        }

        .section-header h2 {
            color: var(--primary-color);
            font-weight: 700;
        }

        .section-header p {
            color: #6c757d;
            font-size: 14px;
        }

        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
        }

        .dashboard-card {
            display: flex;
            align-items: center;
            background-color: var(--background-light);
            border-radius: 12px;
            padding: 15px;
            text-decoration: none;
            color: var(--text-dark);
            transition: all 0.3s ease;
            border: 1px solid transparent;
        }

        .dashboard-card:hover {
            transform: translateY(-5px);
            border-color: var(--primary-color);
            box-shadow: 0 5px 15px rgba(74,144,226,0.2);
        }

        .card-icon {
            background-color: var(--primary-color);
            color: white;
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
        }

        .card-content {
            flex-grow: 1;
        }

        .card-content h3 {
            font-size: 16px;
            margin-bottom: 5px;
        }

        .card-content p {
            font-size: 12px;
            color: #6c757d;
        }

        .card-arrow {
            color: var(--primary-color);
            font-size: 20px;
        }
    </style>
}